<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.steamlink" name="Steamlink Launcher" version="0.1.1" provider-name="Toast">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">Launch Steamlink from Kodi</summary>
    <description lang="en_GB">This add-on allows you to launch the Steamlink application directly from Kodi. It is designed for use on Linux systems.</description>
    <disclaimer lang="en_GB">Use at your own risk. The author is not responsible for any issues that may arise from using this add-on.</disclaimer>
    <language>en</language>
    <platform>linux</platform>
    <license>GPL-2.0</license>
    <forum>https://forum.kodi.tv/</forum>
    <website>https://github.com/swetoast/steamlink-launcher/</website>
    <email></email>
    <source>https://github.com/swetoast/steamlink-launcher</source>
    <news>
      Updated for Kodi 19.x and added support for OSMC.
    </news>
    <assets>
        <icon>resources/icon.png</icon>
        <fanart>resources/fanart.jpg</fanart>
        <banner>resources/banner.png</banner>
        <clearlogo>resources/clearlogo.png</clearlogo>
        <screenshot>resources/screenshot.png</screenshot>
    </assets>
  </extension>
</addon>
